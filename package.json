{
  "name": "@danielkalen/notices-engine",
  "version": "3.0.1",
  "description": "A simple notice (modal popups) system",
  "main": "dist/notices.js",
  "author": "danielkalen",
  "repository": "https://github.com/danielkalen/notices-engine",
  "license": "MIT",
  "scripts": {
    "postversion": "echo \\'$(json -f package.json version)\\' > .version.coffee && npm run build",
    "build": "npm run compile && npm run minify",
    "compile": "simplyimport -i src/notices.coffee | coffee -c -s -b > dist/notices.js",
    "minify": "closure-service dist/notices.js > dist/notices.min.js",
    "watch": "simplywatch -g 'src/*' -x 'npm run compile -s'"
  },
  "devDependencies": {
    "closure-compiler-service": "^0.5.0",
    "coffee-script": "^1.10.0",
    "json": "^9.0.4",
    "simplyimport": "*",
    "simplywatch": "*",
    "uglify": "*"
  },
  "dependencies": {
    "jquery": "^3.1.1"
  }
}
